<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título / Descrição -->
        <TextView
            android:id="@+id/text_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do incidente"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Categoria -->
        <TextView
            android:id="@+id/text_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria ID: 1"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Localização -->
        <TextView
            android:id="@+id/text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local: -29.123, -51.456"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Data -->
        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: 2024-06-01"
            android:textSize="13sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ativo"
            android:textSize="13sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <!-- ID (opcional, no final e discreto) -->
        <TextView
            android:id="@+id/text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btn_resolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolver"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/accentGreen"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
